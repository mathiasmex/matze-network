<h1><%=t ('post.edit_post') %></h1>

<%= error_messages_for :post %>

<% form_for :post, :url => blog_post_path(@blog, @post),
                   :html => { :method => :put } do |f| %>
  <p>
    <b><%=t ('post.blog') %></b><br />
    <%= f.text_field :blog_id %>
  </p>

  <p>
    <b><%=t ('post.topic') %></b><br />
    <%= f.text_field :topic_id %>
  </p>

  <p>
    <b><%=t ('post.person') %></b><br />
    <%= f.text_field :person_id %>
  </p>

  <p>
    <b><%=t ('post.body') %></b><br />
    <%= f.text_area :body %>
  </p>

  <p>
    <%= f.submit t('global.update') %>
  </p>
<% end %>
