<%- column_div :type => :primary do -%>
  <h2><%= t('person.persons_contacts', :person => @person.name) %></h2>
  <% if @person.connections.count > Person::MAX_DEFAULT_CONTACTS %>
    <div class='button see_all_link'>
      <%= link_to t('person.see_all_contacts'), person_connections_path(@person) %>
    </div>
  <% end %>
  <%= render :partial => 'shared/contacts_grid',
             :locals => { :contacts => @person.some_contacts } %>
  <%= render :partial => 'common_contacts' %>
<%- end -%>

<%- column_div :type => :secondary do -%>
  <%= render :partial => 'searches/box' %>
<%- end -%>

<div class="clear"></div>