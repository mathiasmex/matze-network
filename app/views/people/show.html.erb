<div id="profile" style="display: none;">
  <% tabs = TabsRenderer.new(self, :id => "tabCol") %>
  <% tabs.create('tProfile', t('person.profile_tab'), :class => "profile vcard") do %>
    <%= render :partial => 'profile' %>
    <div class="clear"></div>
  <% end %>

  <% tabs.create('tWall', t('person.wall_tab')) do %>
    <%= render :partial => 'wall' %>
    <div class="clear"></div>
  <% end %>

  <% tabs.create('tRecentActivity', t('person.recent_activity_tab')) do %>
    <%= render :partial => 'recent_activity' %>
    <div class="clear"></div>
  <% end %>

  <% tabs.create('tContacts', t('person.contacts_tab')) do %>
    <%= render :partial => 'profile_contacts' %>
    <div class="clear"></div>
  <% end %>

  <% tabs.create('tGroups', t('person.groups_tab')) do %>
    <%= render :partial => 'profile_groups' %>
    <div class="clear"></div>
  <% end %>

  <% tabs.create('tBlog', t('person.blog_tab')) do %>
    <%= render :partial => 'shared/blog' %>
    <div class="clear"></div>
  <% end %>

  <% tabs.create('tGalleries', t('person.galleries_tab')) do %>
    <%= render :partial => "shared/galleries",
               :locals => { :galleries => @galleries } %>
    <div class="clear"></div>
  <% end %>

  <% tabs.create('tEvents', t('person.events_tab')) do %>
    <%= render :partial => "shared/events",
               :locals => { :events => @events } %>
    <div class="clear"></div>
  <% end %>

  <%= tabs.render %>
</div>
<script type='text/javascript'>
  $(document).ready(function() {
    // Set up the tabs.
    $("#tabCol > ul").tabs();
    $("#profile").show();
  })
</script>