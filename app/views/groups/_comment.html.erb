<li>
  <div class="profile-image">
    <%= image_link(comment.commenter, :image => :thumbnail) %>
  </div>
  <p class="meta published">
    <%= t('person.said', :person => person_link(comment.commenter)) %>
    <%= t('global.ago', :time_ago => time_ago_in_words(comment.created_at)) %>
    <%- if (@group.owner?(current_person) or
            current_person?(comment.commenter)) -%>
      <%= link_to image_tag("icons/comment_delete.png", :class => 'actioner'), 
                  group_comment_path(@group, comment),
                  :method => :delete,
                  :confirm => t('comment.delete_wall_comment_confirmation'),
                  :title => t('comment.delete_wall_comment') %>
    <%- end -%>  
  </p>
  <%= display comment.body %>
  <div class="clear"></div>
</li>
