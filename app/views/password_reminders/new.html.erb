<h2><%=t ('password_reminder.password_reminder') %></h2>

<% form_for :person, :url => password_reminders_path do |form| %>
  <div class="field_row">
    <label for="email"><%=t ('password_reminder.enter_email_address') %></label>
    <br />
    <%= form.text_field :email, :maxlength => Person::MAX_EMAIL %>
    <%= set_focus_to "person_email" %>
  </div>
  
  <div class="field_row">
    <%= submit_tag t('password_reminder.send_reminder'), :class => "submit button" %>
  </div>
<% end %>